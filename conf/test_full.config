/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run main.nf -profile test_full,<docker|singularity> --outdir <outdir>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus                   = 2
    max_memory                 = '6.GB'
    max_time                   = '6.h'

    // Input data for full size test
    input                      = 'https://raw.githubusercontent.com/gregorysprenger/test-datasets/assembly-snps/samplesheets/samplesheet.full.csv'

    // Use all of the parameters
    snp_package                = "parsnp"
    recombination              = "both"
    create_excel_outputs       = true
}
